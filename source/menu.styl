//----------------------------------------------------------------------------//
// Menu                                                                       //
//----------------------------------------------------------------------------//

#menu
	 width: 100%
	height: 60px
	relative: left top
	background: grey(40, 0.1)

	& .container
		padding: 0px
		text-align: center

	& a
		  font-size: 18px
		line-height: 40px
		font-weight: 600
		display: inline-block

		 margin:  0px  0px  0px  0px
		padding: 10px 12px 10px 12px

		color: grey(230)
		&:hover, &:active
			color: grey(230)
		&:hover
			background: grey(40, 0.1)
