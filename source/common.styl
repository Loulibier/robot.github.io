//----------------------------------------------------------------------------//

////////////////////////////////////////////////////////////////////////////////

grey($color, $alpha = 1)
	if ($alpha != 1)
		rgba($color, $color, $color, $alpha)
	else
		rgb($color, $color, $color)

////////////////////////////////////////////////////////////////////////////////

retina($path, $extn, $w = auto, $h = auto)
	if ($w in (cover contain) and $h == auto)
		$h = null

	background-image: url($path + $extn)
	@media (-webkit-min-device-pixel-ratio: 2), (min-resolution: 192dpi)
		background-image: url($path + "@2x" + $extn)
		background-size: $w $h



//----------------------------------------------------------------------------//
// Base                                                                       //
//----------------------------------------------------------------------------//

html, body
	 width: 100%
	height: 100%
	font-family: open-sans, sans-serif
	background: grey(240)

#body
	 width: 100%
	height: auto
	min-height: 100%
	relative: left top

canvas, img, svg, video
	vertical-align: middle

.clearfix
	clearfix()

a,
a:hover, a:active,
a:focus, a:visited
	 fill: grey(230)
	color: grey(230)
	outline: none
	text-decoration: none

a:hover
	 fill: grey(180)
	color: grey(180)



