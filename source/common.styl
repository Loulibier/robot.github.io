// Container                                                                  //
//----------------------------------------------------------------------------//

.container
	width: 940px
	relative: left top
	 margin: 0px auto
	padding: 40px 20px 40px 20px

	& h1
		  font-size: 38px
		line-height: 40px
		font-weight: 700
		 text-align: center

		 margin: 0px 0px 15px 0px
		padding: 0px 0px  0px 0px
		color: grey(60)

	& h2
		  font-size: 26px
		line-height: 26px
		font-weight: 400
		 text-align: center

		 margin: 0px 0px 25px 0px
		padding: 0px 0px  0px 0px
		color: grey(60)

	& hr
		 width: 940px
		height:   2px
		display: block

